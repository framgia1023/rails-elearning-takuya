<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="row">
                <div class="col-lg-6">
                    <h2><%= @lesson.category.title %></h2>
                </div>
                <div class="col-lg-6">
                    <h2 class="text-right"><%= @lesson.answers.count %> of <%= @lesson.category.words.count %></h2>
                </div>
            </div>
            <div class="jumbotron">
                <h2 class="text-center">
                    <%= @lesson.next_word.word %>
                </h2>
                <% @lesson.next_word.choices.each do |choice| %>
                    <%= form_for [:lesson, @answer] do |f| %>
                        <%= f.hidden_field :word_id, :value => choice.word_id %>
                        <%= f.hidden_field :choice_id, :value => choice.id %>
                        <%= f.submit choice.choice, class: 'btn btn-outline-secondary btn-block mt-3' %>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
