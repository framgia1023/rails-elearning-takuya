<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <h2 class="text-center">Category Registration</h2>
            <hr/>
            <%= form_for @category, url: administrator_categories_path do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
                <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: 'form-control' %>
                </div>
                <%= f.submit "Save Category", class: 'btn btn-primary btn-block' %>
                <%= link_to "Back Categories Index", administrator_categories_path %>
            <% end %>
        </div>
    </div>
</div>