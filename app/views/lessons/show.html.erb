<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3 mt-4">
            <div class="row">
                <div class="col-lg-6 text-left">
                    <h2><%= @lesson.category.title %></h2>
                </div>
                <div class="col-lg-6 text-right">
                    <h2>
                        Result <%= @lesson.choices.where(correct: true).count %> of <%= @answers.count %>
                    </h2>
                </div>
            </div>
            <table class="table text-center">
                <thead>
                    <th>Word</th>
                    <th>Correct Answer</th>
                    <th>Answer</th>
                    <th>Result</th>
                </thead>
                <% @answers.each do |answer| %>
                    <tbody>
                        <td><%= answer.word.word %></td>
                        <td><%= answer.word.choices.find_by(correct: true).choice %></td>
                        <td><%= answer.choice.choice %></td>
                        <% if answer.word.choices.find_by(correct: true).choice == answer.choice.choice %>
                            <td><%= fa_icon 'check-circle' %></td>
                        <% else %>
                            <td><%= fa_icon 'times-circle' %></td>
                        <% end %>
                    </tbody>
                <% end %>
            </table>
            <%= link_to "Next other Category", categories_path, class: 'btn btn-outline-success float-right' %>
        </div>
    </div>
</div>
