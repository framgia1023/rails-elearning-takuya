<div class="row">
    <div class="col-lg-12">
        <h2>Members</h2>
    </div>
    <% @users.each do |user| %>
        <div class="col-lg-6">
            <div class="media mb-3">
                <div class="align-self-center mr-3 border">
                    <div class="media-body">
                        <h4><%= link_to user.name, user %></h4>
                        <% if user.img? %>
                            <%= image_tag user.img.url, :class => "radius"  %>
                        <% else %>
                            <%= image_tag "default.jpeg", :class => "radius" %>
                        <% end %>
                        <% unless current_user?(user) %>
                            <div id="follow-form">
                                <% if current_user.following?(user) %>
                                    <%= render 'unfollow',user: user %>
                                <% else %>
                                    <%= render 'follow',user: user %>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>

<div class="text-center bordor-top pt-3">
    <%= will_paginate %>
</div>