<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>Categories</h2>
        </div>
        <% @categories.each do |category| %>
            <div class="col-lg-6">
                <div class="jumbotron">
                    <h2><%= category.title %></h2>
                    <small class="text-secondary"><%= category.description %></small>
                    <br/>
                    <%= link_to "Show Results", "#", class: 'btn btn-light float-right' %>
                </div>
            </div>
        <% end %>
    </div>
</div>

<div class="text-center bordor-top pt-3">
    <%= will_paginate %>
</div>