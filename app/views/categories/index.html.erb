<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>Categories</h2>
        </div>
        <% @categories.each do |category| %>
            <div class="col-lg-6">
                <div class="jumbotron">
                    <div class="row">
                        <div class="col-lg-6">
                            <h2><%= category.title %></h2>
                        </div>
                        <div class="col-lg-6 text-right">
                            <% if !checklearn(category).nil? %>
                                <small class="text-secondary"> Learned <%= checklearn(category).result %> of <%= category.words.count %></small>
                            <% end %>
                        </div>
                    </div>
                    <small class="text-secondary"><%= category.description %></small>
                    <br/>
                    <%= form_for @lesson do |f| %>
                        <%= f.hidden_field :user_id, value: current_user.id %>
                        <%= f.hidden_field :category_id, value: category.id %>
                        <% if checklearn(category).nil? %>
                            <%= f.submit "Learn", class: 'btn btn-secondary float-right'%>
                        <% elsif checklearn(category).result.nil? %>
                            <%= f.submit "Learn", class: 'btn btn-secondary float-right'%>
                        <% else %>
                            <%= link_to "Show Result", lesson_url(category.lessons.ids), class: 'btn btn-light float-right' %>
                        <% end %>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
</div>

<div class="text-center bordor-top pt-3">
    <%= will_paginate %>
</div>